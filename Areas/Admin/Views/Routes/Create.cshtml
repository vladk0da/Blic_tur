@model Blic_tur.Areas.Admin.RouteViewModel

@{
    ViewData["Title"] = "Create";
    var Cities = ViewData["Cities"] as List<SelectListItem>;
}
    

<h2>Добавление нового маршрута</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityFromId" class="control-label"></label>
                <select asp-items="@Cities" asp-for="CityFromId" class="form-control">
                    <option>--</option>
                </select>
                <span asp-validation-for="CityFromId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityToId" class="control-label"></label>
                <select asp-items="@Cities" asp-for="CityToId" class="form-control">
                    <option>--</option>
                </select>
                <span asp-validation-for="CityToId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="picture">Добавить изображение</label>
                <input type="file" name="picture" id="picture" class="form-control">
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
